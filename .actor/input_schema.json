{
    "title": "Zillow Pending & Under Contract Scraper",
    "description": "Configure the scraper to extract only Pending and Under Contract properties from Zillow",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchLocation": {
            "title": "Search Location",
            "type": "string",
            "description": "City, state, ZIP code, or address to search (e.g., 'New York, NY' or '90210')",
            "editor": "textfield",
            "example": "Los Angeles, CA"
        },
        "minPrice": {
            "title": "Minimum Price",
            "type": "integer",
            "description": "Minimum property price in USD",
            "editor": "number",
            "minimum": 0,
            "example": 100000
        },
        "maxPrice": {
            "title": "Maximum Price",
            "type": "integer",
            "description": "Maximum property price in USD",
            "editor": "number",
            "minimum": 0,
            "example": 2000000
        },
        "minBedrooms": {
            "title": "Minimum Bedrooms",
            "type": "integer",
            "description": "Minimum number of bedrooms",
            "editor": "number",
            "minimum": 0,
            "maximum": 10,
            "default": 0
        },
        "maxBedrooms": {
            "title": "Maximum Bedrooms",
            "type": "integer",
            "description": "Maximum number of bedrooms (leave empty for no limit)",
            "editor": "number",
            "minimum": 0,
            "maximum": 20
        },
        "minBathrooms": {
            "title": "Minimum Bathrooms",
            "type": "number",
            "description": "Minimum number of bathrooms",
            "editor": "number",
            "minimum": 0,
            "maximum": 10,
            "default": 0
        },
        "maxBathrooms": {
            "title": "Maximum Bathrooms",
            "type": "number",
            "description": "Maximum number of bathrooms (leave empty for no limit)",
            "editor": "number",
            "minimum": 0,
            "maximum": 20
        },
        "homeTypes": {
            "title": "Home Types",
            "type": "array",
            "description": "Types of homes to include",
            "editor": "multiselect",
            "items": {
                "type": "string",
                "enum": [
                    "house",
                    "condo",
                    "townhouse",
                    "multi-family",
                    "land",
                    "manufactured"
                ]
            },
            "default": ["house", "condo", "townhouse"]
        },
        "minSquareFeet": {
            "title": "Minimum Square Feet",
            "type": "integer",
            "description": "Minimum property size in square feet",
            "editor": "number",
            "minimum": 0
        },
        "maxSquareFeet": {
            "title": "Maximum Square Feet",
            "type": "integer",
            "description": "Maximum property size in square feet",
            "editor": "number",
            "minimum": 0
        },
        "minLotSize": {
            "title": "Minimum Lot Size",
            "type": "integer",
            "description": "Minimum lot size in square feet",
            "editor": "number",
            "minimum": 0
        },
        "maxLotSize": {
            "title": "Maximum Lot Size",
            "type": "integer",
            "description": "Maximum lot size in square feet",
            "editor": "number",
            "minimum": 0
        },
        "minYearBuilt": {
            "title": "Minimum Year Built",
            "type": "integer",
            "description": "Minimum year the property was built",
            "editor": "number",
            "minimum": 1800,
            "maximum": 2025
        },
        "maxYearBuilt": {
            "title": "Maximum Year Built",
            "type": "integer",
            "description": "Maximum year the property was built",
            "editor": "number",
            "minimum": 1800,
            "maximum": 2025
        },
        "maxResults": {
            "title": "Maximum Results",
            "type": "integer",
            "description": "Maximum number of properties to scrape",
            "editor": "number",
            "minimum": 1,
            "maximum": 10000,
            "default": 100
        },
        "outputFormat": {
            "title": "Output Format",
            "type": "string",
            "description": "Format for the output data",
            "editor": "select",
            "enum": ["json", "csv"],
            "default": "json"
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Proxy settings for the scraper",
            "editor": "proxy",
            "prefill": {
                "useApifyProxy": true,
                "apifyProxyGroups": ["RESIDENTIAL"]
            }
        }
    },
    "required": ["searchLocation"]
}
